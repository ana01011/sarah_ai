{
  "dashboard": {
    "id": null,
    "title": "Amesie AI Backend Dashboard",
    "tags": ["amesie", "ai", "backend"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(amesie_ai_requests_total[5m])",
            "legendFormat": "requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(amesie_ai_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "GPU Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "amesie_ai_gpu_utilization_percent",
            "legendFormat": "GPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "amesie_ai_memory_usage_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Memory GB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Model Inference Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(amesie_ai_model_inference_duration_seconds_sum[5m]) / rate(amesie_ai_model_inference_duration_seconds_count[5m])",
            "legendFormat": "avg inference time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(amesie_ai_errors_total[5m])",
            "legendFormat": "errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "amesie_ai_active_connections",
            "legendFormat": "connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}